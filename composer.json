{
    "name": "idimopoulos/assessment-client",
    "description": "A library that helps with constructing data to be submitted to the assessment API.",
    "type": "library",
    "autoload": {
        "psr-4": {
            "AssessmentClient\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ilias Dimopoulos",
            "email": "idimopoulos@outlook.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.3",
        "devizzent/cebe-php-openapi": "^1.6@dev",
        "justinrainbow/json-schema": "^6.6"
    },
    "scripts": {
        "cs": "phpcs -p src",
        "cbf": "phpcbf -p src",
        "stan": "phpstan analyse -c phpstan.neon.dist",
        "qa": [
            "@cs",
            "@stan"
        ]
    }
}
