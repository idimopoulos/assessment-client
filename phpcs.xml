<?xml version="1.0"?>
<ruleset name="Assessment Client Coding Standards">
    <description>PHP_CodeSniffer configuration for this project.</description>

    <!-- Use PSR12 as baseline -->
    <rule ref="PSR12"/>

    <!-- Folders to scan -->
    <file>src</file>

    <!-- Exclusions -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>openapi/*</exclude-pattern>

    <!-- Keep things practical for now -->
    <config name="parallel" value="4"/>
</ruleset>
